FROM jpbp/ambientesicar:1.0 as builder
RUN apt-get update
RUN apt-get install -y git
RUN mkdir /root/.ssh/
COPY .ssh/ /root/.ssh/
RUN ssh-keyscan -H https://gitlab.ti.lemaf.ufla.br/ >> ~/.ssh/known_hosts
#RUN git submodule add git@gitlab.ti.lemaf.ufla.br:car-federal/car-ui-components.git car-ui-components
RUN git ls-remote --tags --heads git@gitlab.ti.lemaf.ufla.br:utilitarios/mapa-geo-car-wc.git
COPY ./ ./ 
RUN unzip backend/lib.zip -d backend
RUN cd backend && JAVA_HOME=/opt/jdk1.7.0_80 /opt/play-1.2.7/play deps
RUN echo '{ "allow_root": true }' > /root/.bowerrc && chown -R $(whoami) $HOME/.npm && npm install grunt -g
RUN cd frontend && npm install && bower install 
#RUN cd frontend && rm -rf node_modules/grunt-connect-proxy && npm install eventemitter3@0.1.6 && npm install grunt-connect-proxy && grunt --force
